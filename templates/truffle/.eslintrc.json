{
  "extends": ["eslint:recommended", "airbnb-base", "plugin:mocha/recommended", "plugin:prettier/recommended"],
  "env": {
    "mocha": true,
    "truffle/globals": true
  },
  "globals" : {
    "usePlugin": false
  },
  "plugins": ["mocha", "truffle", "prettier"],
  "rules": {
    "mocha/no-mocha-arrows": "off"
  },
  "ignorePatterns": ["coverage/"]
}
