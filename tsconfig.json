{
  "compilerOptions": {
    /* Basic Options */
    "lib": ["ES2015"],
    "module": "ES2015",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2015",

    /* Strict Type-Checking Options  */
    "noImplicitAny": true,
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": false,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/*.spec*", "**/*.test*", "__tests__", "dist", "lib", "node_modules"]
}
